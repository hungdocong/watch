

@using Watch.Models.EF;
@{
    ViewBag.Title = "Chi tiết nhập kho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 0, soluong = 0;
    var inward = ViewBag.Inward as Inward;
    long tongtien = 0;
}
@model List<Inward_Detail>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Chi tiết nhập kho
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-inbox"></i>Quản lý nhập kho</a></li>
            <li><a href="/admin/inward">Nhật ký nhập kho</a></li>
            <li class="active">Chi tiết nhập kho</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <p>Ngày nhập: <b>@inward.Createdate.Value.ToString("dd-MM-yyyy")</b></p>
                        <p>Tổng số lượng: <b>@inward.TotalQuantity</b></p>
                        <p>Tổng tiền: <b>@inward.TotalAmount.Value.ToString("N0")</b> đ</p>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="tblData" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th class="text-center">Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    dem++;
                                    tongtien += (long)item.Amount;
                                    soluong += (int)item.Quantity;
                                    <tr>
                                        <td>@dem</td>
                                        <td>@item.Product.Product_Name</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-center">@item.Price.Value.ToString("N0")</td>
                                        <td class="text-center">@item.Amount.Value.ToString("N0")</td>
                                    </tr>
                                    
                                }
                                <tr>
                                    <td colspan="3"></td>
                                    <td class="text-center"><b>Tổng số lượng:</b> </td>
                                    <td class="text-center"><span class="price">@soluong</span></td>
                                </tr>
                                <tr>
                                    <td colspan="3"></td>
                                    <td class="text-center"><b>Tổng tiền:</b> </td>
                                    <td class="text-center"><span class="price">@tongtien.ToString("N0")</span> ₫</td>
                                </tr>
                            </tbody>

                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>


@section jsSection{

    <script>
        $(function () {


        });

    </script>

}




