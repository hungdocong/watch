
@using Watch.Models.EF;
@{
    ViewBag.Title = "Nhật ký nhập kho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem_1 = 0;
    var lstproduct = ViewBag.quantity_product as List<Product>;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Nhật ký nhập kho
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-inbox"></i>Quản lý kho</a></li>
            <li class="active">Nhật ký nhập kho</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-4" style="margin-bottom: 10px">
                <a class="btn btn-lg btn-primary" href="/admin/inward/add">Nhập kho </a>
            </div>
        </div>
        <div class="row">
            @if (TempData["message"] != null)
            {
                <div class="alert @TempData["alert"] text-center" id="AlertBox">
                    @TempData["message"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-xs-5">
                <div class="box">
                    <div class="box-header text-center">
                        <h3 class="box-title text-uppercase">Nhật ký nhập kho</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        #
                                    </th>
                                    <th class="text-center">
                                        Thông tin đơn nhập
                                    </th>
                                    <th class="text-center">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int dem = 0;
                                    foreach (var item in Model)
                                    {
                                        dem++;
                                        <tr>
                                            <td class="text-center">@dem</td>
                                            <td>
                                                <p>Tổng số lượng: <b>@item.TotalQuantity</b></p>
                                                <p>Tổng tiền: <b>@item.TotalAmount.ToString("N0")</b> đ</p>
                                                <p>Ngày nhập: <b>@item.Createdate.ToString("dd-MM-yyyy")</b></p>
                                            </td>
                                            <td class="text-center">
                                                <a href="/admin/inward/inward_detail/@item.ID" class="btn btn-primary">
                                                    <i class="fa fa-calculator fa-fw" style="padding-right: 10px;"></i>Xem chi tiết
                                                </a>
                                            </td>
                                        </tr>

                                    }
                                }

                            </tbody>

                        </table>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
            <div class="col-xs-7">
                <div class="box">
                    <div class="box-header text-center">
                        <h3 class="box-title text-uppercase">Danh sách sản phẩm tồn kho</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th class="text-center">Mã sản phẩm</th>
                                    <th class="text-center">Tên sản phẩm</th>
                                    <th class="text-center">Số lượng tồn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstproduct)
                                {
                                    dem_1++;
                                    <tr>
                                        <td>@dem_1</td>
                                        <td>@item.Product_Code</td>
                                        <td>@item.Product_Name</td>
                                        <td class="text-center">@item.Quantity</td>
                                    </tr>
                                }

                            </tbody>

                        </table>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>

@section jsSection{

    <script>
        $(function () {
           
        });

    </script>

}


